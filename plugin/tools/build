#!/bin/bash

echo "----------------------------------------" > package/L_SenseMe.lua
echo "-- Globals" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/globals.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Vera" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/vera.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Plugin" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/plugin.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Debug" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/debug.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Task" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/task.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Utilities" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/utilities.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Settings" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/settings.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- UDP" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/udp.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- SenseMe" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/senseme.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Startup" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/startup.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua

echo "----------------------------------------" >> package/L_SenseMe.lua
echo "-- Actions" >> package/L_SenseMe.lua
echo "----------------------------------------" >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
cat L_SenseMe/actions.lua >> package/L_SenseMe.lua
echo "" >> package/L_SenseMe.lua
