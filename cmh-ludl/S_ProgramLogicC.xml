<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
    <stateVariable sendEvents="no">
      <name>Triggers</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>triggers</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>Modes</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>triggers</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>Properties</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>properties</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>Schedules</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>schedules</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>Actions</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>actions</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>ActionMap</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>actionmap</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>ConditionRepeat</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>conditionrepeat</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <!-- Contains the info needed to evaluate condition expressions -->
      <!-- {{ObjectName1, State, LastChanged} ... } -->
      <!-- All Trigger States are re-evaluare using info from TriggerDeviceVariableMap, when a trigger changes via TriggerAction } -->
      <name>ObjectStatusMap</name>
      <dataType>string</dataType>
      <defaultValue></defaultValue>
      <shortCode>objectstatusmap</shortCode>
    </stateVariable>
    <stateVariable sendEvents="no">
      <!-- Dummy for actions below -->
      <name>A_ARG_TYPE_string</name>
      <dataType>string</dataType>
    </stateVariable>
    <stateVariable sendEvents="no">
      <!-- Dummy for actions below -->
      <name>A_ARG_TYPE_ID</name>
      <dataType>int</dataType>
      <allowedValueRange>
        <minimum>1</minimum>
        <maximum>10000</maximum>
      </allowedValueRange>
    </stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
      <name>SetVariable</name>
      <argumentList>
        <argument>
          <name>ServiceId</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
        <argument>
          <name>VariableName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
        <argument>
          <name>Value</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
        <argument>
          <name>Device</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_ID</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>SetHouseMode</name>
      <argumentList>
        <argument>
          <name>Mode</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_ID</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>RunScene</name>
      <argumentList>
        <argument>
          <name>SceneNameOrNumber</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>RunAction</name>
      <argumentList>
        <argument>
          <name>actionName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>StartTimer</name>
      <argumentList>
        <argument>
          <name>timerName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
        <argument>
          <name>intervalTime</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>ToggleTimer</name>
      <argumentList>
        <argument>
          <name>timerName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>IncrementCounter</name>
      <argumentList>
        <argument>
          <name>counterName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
        <argument>
          <name>counterIncrement</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_ID</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>ClearCounter</name>
      <argumentList>
        <argument>
          <name>counterName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>StartCounter</name>
      <argumentList>
        <argument>
          <name>counterName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>StopCounter</name>
      <argumentList>
        <argument>
          <name>counterName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>Backup</name>
      <argumentList>
        <argument>
          <name>fileName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
        <argument>
          <name>notifications</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>Restore</name>
      <argumentList>
        <argument>
          <name>fileName</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_string</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
  </actionList>
</scpd>
