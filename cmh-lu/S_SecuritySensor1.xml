<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
    <stateVariable allowRepeats="yes">
       <name>Tripped</name>
       <sendEventsAttribute>yes</sendEventsAttribute>
       <dataType>boolean</dataType>
       <shortCode>tripped</shortCode>
       <defaultValue>false</defaultValue>
    </stateVariable>
    <stateVariable>
      <name>Armed</name>
      <sendEventsAttribute>yes</sendEventsAttribute>
      <dataType>boolean</dataType>
      <shortCode>armed</shortCode>
      <setDefaultValue>1</setDefaultValue>
      <defaultValue>0</defaultValue>
    </stateVariable>
    <stateVariable>
      <name>ArmedTripped</name>
      <sendEventsAttribute>yes</sendEventsAttribute>
      <dataType>boolean</dataType>
      <shortCode>armedtripped</shortCode>
      <setDefaultValue>1</setDefaultValue>
      <defaultValue>0</defaultValue>
      <logCode>DL_ARMEDTRIPPED</logCode>
      <logSeverity>1</logSeverity>
    </stateVariable>
    <stateVariable>
      <name>LastTrip</name>
      <dataType>i4</dataType>
      <shortCode>lasttrip</shortCode>
    </stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
      <name>SetArmed</name>
      <argumentList>
        <argument>
          <name>newArmedValue</name>
          <direction>in</direction>
          <relatedStateVariable>Armed</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
  </actionList>
</scpd>
