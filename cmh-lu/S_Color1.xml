<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable>
            <name>CurrentColor</name>
            <sendEventsAttribute>no</sendEventsAttribute>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <name>TargetColor</name>
            <sendEventsAttribute>no</sendEventsAttribute>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <name>SupportedColors</name>
            <sendEventsAttribute>no</sendEventsAttribute>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <Optional />
            <name>ColorChannelPriorities</name>
            <sendEventsAttribute>no</sendEventsAttribute>
            <dataType>string</dataType>
        </stateVariable>
    </serviceStateTable>
    <actionList>
        <action>
            <name>SetColor</name>
            <argumentList>
                <argument>
                    <name>newColorTarget</name>
                    <direction>in</direction>
                    <relatedStateVariable>TargetColor</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetColorRGB</name>
            <argumentList>
                <argument>
                    <name>newColorRGBTarget</name>
                    <direction>in</direction>
                    <relatedStateVariable>TargetColor</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetColorTemp</name>
            <argumentList>
                <argument>
                    <name>newColorTempTarget</name>
                    <direction>in</direction>
                    <relatedStateVariable>TargetColor</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
</scpd>
